{
  "scripts": {
    "test:api": "node scripts/api-tests/newman-runner.js",
    "test:api:dev": "scripts/run-api-tests.sh --environment development",
    "test:api:prod": "scripts/run-api-tests.sh --environment production",
    "test:load": "scripts/run-api-tests.sh --load-tests --users 50 --duration 120",
